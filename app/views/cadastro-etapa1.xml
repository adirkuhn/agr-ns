<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
	<ScrollView>
		<StackLayout>
			<StackLayout cssClass="cadastro-etapa1-bg">
				<Image src="res://logo_agripa_periodico" stretch="aspectFit" horizontalAlignment="center" cssClass="logo-periodico" />
				<Label text="Dados BÃ¡sicos" horizontalAlignment="center" />
			</StackLayout>

			<StackLayout cssClass="cadastro-etapa1-bg-2">

				<TextField id="email_address" text="{{ email }}" hint="Email" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
				<TextField id="nome" text="{{ name }}" hint="Nome Completo" />
				<TextField id="password" secure="true" text="{{ password }}" hint="Senha" />
				<TextField id="password_confirm" secure="true" text="" hint="Confirmar senha" />

				<GridLayout>
					<Button text="Prosseguir" cssClass="btn-prosseguir" />
				</GridLayout>

				<GridLayout>
					<Button text="Linkedin" cssClass="btn-linkedin" />
				</GridLayout>
			</StackLayout>
		</StackLayout>
	</ScrollView>
</Page>