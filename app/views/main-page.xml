<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
	<ScrollView>
		<StackLayout>
			<Image src="res://logo_agripa_completo" stretch="aspectFit" horizontalAlignment="center" />

			<TextField id="email_address" text="{{ email }}" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
			<TextField id="password" secure="true" text="{{ password }}" hint="Password" />

			<GridLayout>
				<Button text="Entrar" cssClass="btn btn-login" tap="register" />
				<ActivityIndicator busy="{{ authenticating }}" />
				<Button text="Cadastre-se" cssClass="btn btn-cadastro" tap="register" />
			</GridLayout>

			<GridLayout>
				<Button text="Linkedin" cssClass="btn-linkedin" tap="register" />
			</GridLayout>
		</StackLayout>
	</ScrollView>
</Page>